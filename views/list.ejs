<%- include('header') %>
  <div class="box">
    <% newListItems.forEach((item)=> { %>
      <form action="/delete" method="post">
        <div class="item">
          <input type="checkbox" value="<%= item._id %>" onChange="this.form.submit()" name="checkbox">
          <p>
            <%= item.name %>
          </p>
        </div>
      </form>
      <% }) %>

        <form class="form" action="/" method="post">
          <input class="new-item" type="text" name="newItem" placeholder="add new Item" autocomplete="off">
          <button type="submit" name="list" value="<%=ListTitle %>">+</button>
        </form>
  </div>

  <%- include('footer') %>